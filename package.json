{
  "name": "bujv",
  "version": "0.0.1",
  "description": "a tiny simple lib for react layout",
  "author": "Dafunk-759",
  "license": "MIT",
  "repository": "Dafunk-759/bujv",
  "files": [
    "dist"
  ],
  "main": "./dist/bujv.umd.js",
  "module": "./dist/bujv.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bujv.es.js",
      "require": "./dist/bujv.umd.js"
    }
  },
  "keywords": [
    "react",
    "layout"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "dependencies": {
    "react": ">=17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@vitejs/plugin-react": "^1.0.7",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  }
}
